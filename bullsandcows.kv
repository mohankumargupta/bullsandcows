#:kivy 1.9.1

<BullsAndCows>:
  BoxLayout:
    padding:20
    spacing:20
    Label:
      text:"Input:"
      size_hint:(0.2,0.05)
      pos_hint:({'x':0, 'center_y':0.9})      
    TextInput:
      id: 'guess'
      text: str(root.answer)
      size_hint:(0.6,0.05)
      pos_hint:({'x':0, 'center_y':0.9})
    Button:
      text: "OK"
      size_hint: (0.1,0.05)
      pos_hint:({'x':0, 'center_y':0.9})
      on_press: root.button_pressed()
  BoxLayout:
    Label:
      text: "Try"
      size_hint: (0.3,0.5)
      pos_hint:({'x':0, 'center_y':0.8})
    Label:
      text: "Guess"
      size_hint: (0.3,0.5)
      pos_hint:({'x':0, 'center_y':0.8})
    Label:
      text: "Result"
      size_hint: (0.3,0.5)
      pos_hint:({'x':0, 'center_y':0.8})          
  BullsAndCowsMainWidget:
    id: 'mainwidget'  
    cols:3





